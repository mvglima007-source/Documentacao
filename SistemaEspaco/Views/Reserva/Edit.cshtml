@model SistemaEspaco.Models.Reserva

@{
    ViewData["Title"] = "Editar Reserva";
}

<style>
    body {
        background-attachment: fixed;
        min-height: 100vh;
        color: white;
    }
</style>

<h1 class="text-center text-4xl font-bold text-white mb-8 drop-shadow-lg">
    Editar Reserva
</h1>

<div class="container mx-auto px-4">
    <div class="flex justify-center">
        <div class="w-full max-w-xl">

            <div class="bg-[rgba(20,20,40,0.55)] backdrop-blur-xl shadow-2xl
                        rounded-2xl p-8 border border-white/10">

                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="IdReserva" />

                    <div asp-validation-summary="ModelOnly"
                         class="text-red-400 text-sm mb-4"></div>

           
                    <div class="mb-4">
                        <label asp-for="IdUsuario" class="block text-purple-200 font-medium mb-1"></label>
                        <select asp-for="IdUsuario"
                                asp-items="ViewBag.IdUsuario"
                                class="w-full p-3 rounded-xl bg-white/10 text-white
                                       border border-white/20 focus:ring-2 focus:ring-purple-500
                                       focus:outline-none">
                        </select>
                        <span asp-validation-for="IdUsuario"
                              class="text-red-400 text-sm"></span>
                    </div>

         
                    <div class="mb-4">
                        <label asp-for="IdEspaco" class="block text-purple-200 font-medium mb-1"></label>
                        <select asp-for="IdEspaco"
                                asp-items="ViewBag.IdEspaco"
                                class="w-full p-3 rounded-xl bg-white/10 text-white
                                       border border-white/20 focus:ring-2 focus:ring-purple-500
                                       focus:outline-none">
                        </select>
                        <span asp-validation-for="IdEspaco"
                              class="text-red-400 text-sm"></span>
                    </div>

             
                    <div class="mb-4">
                        <label asp-for="DataInicio" class="block text-purple-200 font-medium mb-1"></label>
                        <input asp-for="DataInicio"
                               class="w-full p-3 rounded-xl bg-white/10 text-white
                                      border border-white/20 focus:ring-2 focus:ring-purple-500
                                      focus:outline-none"
                               type="datetime-local" />
                        <span asp-validation-for="DataInicio"
                              class="text-red-400 text-sm"></span>
                    </div>

          
                    <div class="mb-4">
                        <label asp-for="DataFim" class="block text-purple-200 font-medium mb-1"></label>
                        <input asp-for="DataFim"
                               class="w-full p-3 rounded-xl bg-white/10 text-white
                                      border border-white/20 focus:ring-2 focus:ring-purple-500
                                      focus:outline-none"
                               type="datetime-local" />
                        <span asp-validation-for="DataFim"
                              class="text-red-400 text-sm"></span>
                    </div>



 
                    <button type="submit"
                            class="w-full py-3 rounded-xl font-bold
                                   border border-purple-400 text-purple-300
                                   hover:bg-purple-500 hover:text-white
                                   hover:shadow-[0_0_12px_#b076ff]
                                   transition">
                        Salvar Alterações
                    </button>
                </form>

                <div class="text-center mt-4">
                    <a asp-action="Index"
                       class="inline-block px-4 py-2 rounded-xl border border-white/20
                              text-white hover:bg-white/10 transition">
                        Voltar para a Lista
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
