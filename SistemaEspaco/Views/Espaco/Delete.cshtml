@model SistemaEspaco.Models.Espaco

@{
    ViewData["Title"] = "Excluir Espaço";
}

<div class="min-h-screen bg-cover bg-center bg-fixed"
     style="background-image: url('@Url.Content("~/img/fundo.png")')">

    <div class="flex items-center justify-center min-h-screen bg-black/40 backdrop-blur-sm px-4">

        <div class="w-full max-w-xl bg-white/10 backdrop-blur-xl shadow-2xl
                    rounded-2xl p-8 border border-white/20">

            <h1 class="text-3xl font-bold text-white text-center mb-2 drop-shadow-lg">
                Excluir Espaço
            </h1>

            <h3 class="text-center text-red-300 font-semibold mb-6">
                Tem certeza que deseja excluir este registro?
            </h3>

            <div class="bg-white/5 rounded-xl p-5 border border-white/10">

                <h4 class="text-white text-xl font-semibold text-center mb-4">Detalhes</h4>
                <hr class="border-white/20 mb-4" />

                <dl class="space-y-3">

                    <div class="flex">
                        <dt class="w-1/3 text-cyan-200 font-medium">Nome:</dt>
                        <dd class="w-2/3 text-white">@Html.DisplayFor(m => m.Nome)</dd>
                    </div>

                    <div class="flex">
                        <dt class="w-1/3 text-cyan-200 font-medium">Descrição:</dt>
                        <dd class="w-2/3 text-white">@Html.DisplayFor(m => m.Descricao)</dd>
                    </div>

                    <div class="flex">
                        <dt class="w-1/3 text-cyan-200 font-medium">Capacidade:</dt>
                        <dd class="w-2/3 text-white">@Html.DisplayFor(m => m.Capacidade)</dd>
                    </div>

                </dl>
            </div>

            <form asp-action="Delete" class="mt-6">
                <input type="hidden" asp-for="IdEspaco" />

                <button type="submit"
                        class="w-full py-3 rounded-xl font-semibold text-lg
                               bg-red-500 text-white shadow-lg shadow-red-700/40
                               hover:bg-red-400 hover:shadow-red-400/40
                               transform hover:-translate-y-1 transition-all">
                    Excluir
                </button>
            </form>

            <div class="text-center mt-6">
                <a asp-action="Index"
                   class="text-white/80 hover:text-white underline transition">
                    Voltar para a Lista
                </a>
            </div>

        </div>

    </div>
</div>
