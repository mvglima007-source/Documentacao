@model SistemaEspaco.Models.Espaco

@{
    ViewData["Title"] = "Editar Espaço";
}

<style>
    body {
        min-height: 100vh;
        color: white;
    }
</style>

<h1 class="text-center text-white font-bold text-3xl mt-6 mb-6">
    Editar Espaço
</h1>

<div class="container mx-auto">
    <div class="flex justify-center">
        <div class="w-full max-w-lg">


            <div class="bg-[rgba(20,20,40,0.55)] backdrop-blur-xl shadow-2xl p-8 rounded-2xl">

                <form asp-action="Edit" class="space-y-5">

                    <div asp-validation-summary="ModelOnly" class="text-red-400"></div>

                    <input type="hidden" asp-for="IdEspaco" />


                    <div>
                        <label asp-for="Nome"
                               class="block text-blue-200 font-medium mb-1"></label>

                        <input asp-for="Nome"
                               class="w-full px-3 py-2 rounded-xl border border-white/30
                                      bg-white/10 text-white
                                      focus:bg-white/20 focus:border-cyan-400 focus:ring-0
                                      focus:shadow-[0_0_10px_#00d5ff] transition" />

                        <span asp-validation-for="Nome" class="text-red-400"></span>
                    </div>


                    <div>
                        <label asp-for="Descricao"
                               class="block text-blue-200 font-medium mb-1"></label>

                        <input asp-for="Descricao"
                               class="w-full px-3 py-2 rounded-xl border border-white/30
                                      bg-white/10 text-white
                                      focus:bg-white/20 focus:border-cyan-400 focus:ring-0
                                      focus:shadow-[0_0_10px_#00d5ff] transition" />

                        <span asp-validation-for="Descricao" class="text-red-400"></span>
                    </div>


                    <div>
                        <label asp-for="Capacidade"
                               class="block text-blue-200 font-medium mb-1"></label>

                        <input asp-for="Capacidade"
                               class="w-full px-3 py-2 rounded-xl border border-white/30
                                      bg-white/10 text-white
                                      focus:bg-white/20 focus:border-cyan-400 focus:ring-0
                                      focus:shadow-[0_0_10px_#00d5ff] transition" />

                        <span asp-validation-for="Capacidade" class="text-red-400"></span>
                    </div>


                    <button type="submit"
                            class="w-full py-3 bg-cyan-400 text-[#0e0033]
                                   font-semibold rounded-xl
                                   transition hover:bg-cyan-300 hover:shadow-[0_0_12px_#00e4ff]
                                   hover:-translate-y-1">
                        Salvar Alterações
                    </button>

                </form>

                <div class="text-center mt-4">
                    <a asp-action="Index"
                       class="border border-white text-white px-4 py-2 rounded-xl font-medium
                              transition hover:bg-white hover:text-black hover:shadow-lg">
                        Voltar para a Lista
                    </a>
                </div>

            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
