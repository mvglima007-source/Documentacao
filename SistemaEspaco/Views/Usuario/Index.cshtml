@model IEnumerable<SistemaEspaco.Models.Usuario>

@{
    ViewData["Title"] = "Usuários";
}

<style>

    #tabela th,
    #tabela td {
        white-space: nowrap;
    }
</style>

<h1 class="mb-8 text-center text-white font-extrabold text-4xl">Lista de Usuários</h1>

<div class="container mx-auto px-4">
    <div class="flex justify-center">
        <div class="w-full max-w-5xl">

            <div class="bg-[rgba(20,20,40,0.55)] backdrop-blur-xl rounded-2xl p-8 shadow-2xl text-white">

  
                <div class="overflow-x-auto rounded-xl">
                    <table id="tabela" class="table-auto w-full rounded-xl whitespace-nowrap">
                        <thead class="bg-white/10 backdrop-blur">
                            <tr class="font-bold text-purple-200 text-left">
                                <th class="px-4 py-3">@Html.DisplayNameFor(model => model.Nome)</th>
                                <th class="px-4 py-3">@Html.DisplayNameFor(model => model.Email)</th>
                                <th class="px-4 py-3">@Html.DisplayNameFor(model => model.Telefone)</th>
                                <th class="px-4 py-3 text-center">Ações</th>
                            </tr>
                        </thead>

                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <tr class="bg-white/5 hover:bg-cyan-500/20 transition transform hover:scale-[1.01]">
                                        <td class="px-4 py-3">@item.Nome</td>
                                        <td class="px-4 py-3">@item.Email</td>
                                        <td class="px-4 py-3">@item.Telefone</td>
                                        <td class="px-4 py-3 text-end space-x-2">

                                            <a asp-action="Details" asp-route-id="@item.IdUsuario"
                                               class="border border-purple-500 text-purple-300 hover:bg-purple-500 hover:text-white px-4 py-2 rounded-xl transition font-semibold">
                                                Detalhes
                                            </a>

                                            <a asp-action="Edit" asp-route-id="@item.IdUsuario"
                                               class="border border-purple-500 text-purple-300 hover:bg-purple-500 hover:text-white px-4 py-2 rounded-xl transition font-semibold">
                                                Editar
                                            </a>

                                            <a asp-action="Delete" asp-route-id="@item.IdUsuario"
                                               class="border border-red-500 text-red-300 hover:bg-red-500 hover:text-white px-4 py-2 rounded-xl transition font-semibold">
                                                Excluir
                                            </a>

                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center py-6 text-gray-300">
                                        Nenhum usuário cadastrado.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="text-center mt-8">
                    <a asp-action="Create"
                       class="border border-purple-500 text-purple-300 hover:bg-purple-500 hover:text-white px-6 py-3 rounded-xl transition font-bold text-lg">
                        Cadastrar Novo Usuário
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>


}
