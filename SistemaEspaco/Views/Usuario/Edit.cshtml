@model SistemaEspaco.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuário";
}

<div class="min-h-screen flex items-center justify-center p-6 text-white"
     style="background-image: url('/img/fundo.png'); background-size: cover; background-position: center; background-attachment: fixed;">

    <div class="bg-white/10 backdrop-blur-xl shadow-2xl rounded-2xl p-10 w-full max-w-xl border border-white/20">

        <h2 class="text-center text-3xl font-bold text-white mb-6">Editar Usuário</h2>

        <hr class="border-white/20 mb-6" />

        <form asp-action="Edit">

            <input type="hidden" asp-for="IdUsuario" />


            <div class="mb-4">
                <label asp-for="Nome" class="block text-purple-200 font-semibold mb-1"></label>
                <input asp-for="Nome"
                       class="w-full bg-white/10 border border-white/20 text-white rounded-xl px-4 py-2
                              focus:border-sky-400 focus:ring-2 focus:ring-sky-400/50 focus:outline-none transition" />
                <span asp-validation-for="Nome" class="text-red-400 text-sm"></span>
            </div>


            <div class="mb-4">
                <label asp-for="Email" class="block text-purple-200 font-semibold mb-1"></label>
                <input asp-for="Email"
                       class="w-full bg-white/10 border border-white/20 text-white rounded-xl px-4 py-2
                              focus:border-sky-400 focus:ring-2 focus:ring-sky-400/50 focus:outline-none transition" />
                <span asp-validation-for="Email" class="text-red-400 text-sm"></span>
            </div>


            <div class="mb-6">
                <label asp-for="Telefone" class="block text-purple-200 font-semibold mb-1"></label>
                <input asp-for="Telefone"
                       class="w-full bg-white/10 border border-white/20 text-white rounded-xl px-4 py-2
                              focus:border-sky-400 focus:ring-2 focus:ring-sky-400/50 focus:outline-none transition" />
                <span asp-validation-for="Telefone" class="text-red-400 text-sm"></span>
            </div>


            <button type="submit"
                    class="w-full py-3 rounded-xl font-semibold border border-purple-400 text-purple-300
                           hover:bg-purple-600/20 hover:text-purple-100 hover:border-purple-300 transition mb-3">
                Salvar
            </button>


            <a asp-action="Index"
               class="block w-full text-center py-3 rounded-xl font-semibold border border-sky-400 text-sky-300
                      hover:bg-sky-500/20 hover:text-sky-100 hover:border-sky-300 transition">
                Voltar para Lista
            </a>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
