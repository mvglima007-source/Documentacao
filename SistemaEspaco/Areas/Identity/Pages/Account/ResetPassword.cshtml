@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Redefinir senha";
}

<div class="flex justify-center items-center min-h-screen bg-gray-100">
    <div class="w-full max-w-md bg-white p-8 rounded-xl shadow-lg border border-gray-200">

        <h1 class="text-2xl font-semibold text-center mb-2 text-gray-800">Redefinir senha</h1>
        <p class="text-center text-gray-600 mb-6">Defina uma nova senha para sua conta.</p>

        <form method="post" class="space-y-4">

            <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm"></div>

            <input asp-for="Input.Code" type="hidden" />

         
            <div>
                <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700 mb-1">E-mail</label>
                <input asp-for="Input.Email"
                       class="w-full p-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-purple-600 focus:outline-none"
                       autocomplete="username"
                       placeholder="seuemail@exemplo.com" />
                <span asp-validation-for="Input.Email" class="text-red-600 text-sm"></span>
            </div>

        
            <div>
                <label asp-for="Input.Password" class="block text-sm font-medium text-gray-700 mb-1">Nova senha</label>
                <input asp-for="Input.Password"
                       type="password"
                       class="w-full p-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-purple-600 focus:outline-none"
                       autocomplete="new-password"
                       placeholder="Digite sua nova senha" />
                <span asp-validation-for="Input.Password" class="text-red-600 text-sm"></span>
            </div>

         
            <div>
                <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-1">Confirmar senha</label>
                <input asp-for="Input.ConfirmPassword"
                       type="password"
                       class="w-full p-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-purple-600 focus:outline-none"
                       autocomplete="new-password"
                       placeholder="Confirme sua nova senha" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-red-600 text-sm"></span>
            </div>

           
            <button type="submit"
                    class="w-full py-3 rounded-xl border border-purple-600 text-purple-600 font-semibold hover:bg-purple-600 hover:text-white transition">
                Redefinir senha
            </button>

        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
